<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/logout"
        android:layout_width="325dp"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        android:onClick="logout"
        android:padding="10dp"
        android:text="Logout"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfile1"
        app:layout_constraintVertical_bias="0.428"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/userProfile1"
        android:layout_width="325dp"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        android:onClick="userProfile1"
        android:padding="10dp"
        android:text="User Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadedImage"
        app:layout_constraintVertical_bias="0.665" />

    <Button
        android:id="@+id/btn_ChooseImage"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@color/colorAccent"
        android:text="Choose File"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <Button
        android:id="@+id/uploadBtn"
        android:layout_width="325dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorPrimary"
        android:text="Upload"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ChooseImage"
        app:layout_constraintVertical_bias="0.04000002" />

    <TextView
        android:id="@+id/showUploads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Uploads"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:onClick="showUploads"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadBtn"
        app:layout_constraintVertical_bias="0.01999998"
        tools:ignore="OnClick" />

    <ImageView
        android:id="@+id/uploadedImage"
        android:layout_width="259dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showUploads"
        app:layout_constraintVertical_bias="0.046" />

</androidx.constraintlayout.widget.ConstraintLayout>